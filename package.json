{
  "name": "@enonic/page-editor",
  "version": "0.0.1-SNAPSHOT",
  "description": "Adds page editing capability for externally rendered sites in Enonic XP",
  "license": "GPL-3.0",
  "author": "Pavel Milkevich <pmi@enonic.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/enonic/npm-page-editor.git"
  },
  "bugs": {
    "url": "https://github.com/enonic/npm-page-editor/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/enonic/npm-page-editor#readme",
  "keywords": [
    "enonic",
    "xp",
    "content studio",
    "page editor",
    "cms",
    "content management system"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "engines": {
    "node": ">= 24.13.0"
  },
  "scripts": {
    "build": "pnpm build:dev",
    "build:prod": "pnpm --color /^build:prod:.*$/",
    "build:prod:js": "cross-env BUILD_TARGET=js vite build --mode production",
    "build:prod:css": "cross-env BUILD_TARGET=css vite build --mode production",
    "build:dev": "pnpm --color /^build:dev:.*$/",
    "build:dev:js": "cross-env BUILD_TARGET=js vite build --mode development",
    "build:dev:css": "cross-env BUILD_TARGET=css vite build --mode development",
    "check": "pnpm /^check:.*$/",
    "check:types": "tsc --noEmit",
    "check:lint": "eslint . --quiet --cache",
    "fix": "eslint --fix **/*.ts",
    "clean": "del-cli build/ enonic-page-editor-*.zip"
  },
  "files": [
    "dist",
    "LICENSE.txt",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./fonts/*": "./dist/fonts/*",
    "./styles.css": "./dist/main.css"
  },
  "dependencies": {
    "dompurify": "^3.3.1",
    "jquery": "~3.7.1",
    "jquery-simulate": "^1.0.2",
    "jquery-ui": "^1.14.1",
    "mousetrap": "^1.6.5",
    "q": "^1.5.1"
  },
  "devDependencies": {
    "@enonic/eslint-config": "^2.1.0",
    "@enonic/lib-admin-ui": "file:.xp/dev/lib-admin-ui",
    "@enonic/lib-contentstudio": "file:.xp/dev/lib-contentstudio",
    "@eslint/js": "^9.39.2",
    "@rollup/plugin-inject": "^5.0.5",
    "@types/ckeditor": "^4.9.10",
    "@types/jquery": "^3.5.33",
    "@types/jqueryui": "^1.12.24",
    "@types/node": "^25.0.10",
    "@types/postcss-normalize": "^9.0.4",
    "@types/q": "^1.5.8",
    "autoprefixer": "^10.4.21",
    "browserslist-config-enonic": "^1.0.8",
    "cross-env": "^10.0.0",
    "cssnano": "^7.1.0",
    "del-cli": "^7.0.0",
    "enonic-admin-artifacts": "^2.3.2",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "less": "^4.5.1",
    "postcss": "^8.5.6",
    "postcss-normalize": "^13.0.1",
    "postcss-sort-media-queries": "^5.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^4.4.0"
  }
}
